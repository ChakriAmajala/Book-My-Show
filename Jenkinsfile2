pipeline {
  agent any

  tools {
    jdk 'jdk17'
    nodejs 'node23'
  }

  environment {
    SCANNER_HOME = tool 'sonar-scanner'
    AWS_REGION = 'ap-southeast-2'
    EKS_CLUSTER_NAME = 'new'
    SONAR_HOST_URL = 'http://13.211.163.74:9090/'
    IMAGE_NAME = "chakriamajaladocker/bookmyshow:latest"
    K8S_NAMESPACE = "bms-namespace"
  }

  stages {
    stage('Clean Workspace') {
      steps {
        cleanWs()
      }
    }

    stage('Checkout from Git') {
      steps {
        git branch: 'main', url: 'https://github.com/ChakriAmajala/Book-My-Show.git'
        sh 'ls -la'
      }
    }

    stage('SonarQube Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonarr', variable: 'SONAR_TOKEN')]) {
          sh '''
            echo "Using Sonar host: $SONAR_HOST_URL"
            ${SCANNER_HOME}/bin/sonar-scanner \
              -Dsonar.projectKey=BMS \
              -Dsonar.projectName=BMS \
              -Dsonar.host.url="$SONAR_HOST_URL" \
              -Dsonar.token="$SONAR_TOKEN"
          '''
        }
      }
    }

    stage('Install Dependencies') {
      steps {
        sh '''
          cd bookmyshow-app
          if [ -f package.json ]; then
            rm -rf node_modules package-lock.json
            npm install
          else
            echo "‚ùå Error: package.json not found in bookmyshow-app!"
            exit 1
          fi
        '''
      }
    }

    stage('Docker Build & Push') {
      steps {
        script {
          withDockerRegistry(credentialsId: 'docker-cred', url: 'https://index.docker.io/v1/') {
            sh """
              echo "üê≥ Building Docker image..."
              docker build --no-cache -t ${IMAGE_NAME} -f bookmyshow-app/Dockerfile bookmyshow-app

              echo "üì¶ Pushing Docker image to Docker Hub..."
              docker push ${IMAGE_NAME}
            """
          }
        }
      }
    }

    stage('Deploy to EKS Cluster') {
      steps {
        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
          sh '''
            echo "‚úÖ Verifying AWS credentials..."
            aws sts get-caller-identity

            echo "üîß Configuring kubectl for EKS cluster..."
            aws eks update-kubeconfig --name $EKS_CLUSTER_NAME --region $AWS_REGION

            echo "üöÄ Deploying application to EKS..."
            kubectl get ns ${K8S_NAMESPACE} || kubectl create ns ${K8S_NAMESPACE}
            kubectl -n ${K8S_NAMESPACE} apply -f deployment.yml
            kubectl -n ${K8S_NAMESPACE} apply -f service.yml

            echo "‚úÖ Verifying deployment..."
            kubectl -n ${K8S_NAMESPACE} get pods -o wide || true
            kubectl -n ${K8S_NAMESPACE} get svc || true
          '''
        }
      }
    }

    stage('Create / Update Ingress') {
      steps {
        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
          sh '''
            echo "üîß Ensure kubeconfig for EKS cluster..."
            aws eks update-kubeconfig --name $EKS_CLUSTER_NAME --region $AWS_REGION

            echo "üßæ Creating ingress manifest..."



            cat > ingress.yml <<ING
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: bms-ingress
  namespace: ${K8S_NAMESPACE}
  annotations:
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: book1-service
            port:
              number: 3000
ING

            echo "üöÄ Applying ingress..."
            kubectl get ns ${K8S_NAMESPACE} || kubectl create ns ${K8S_NAMESPACE}
            kubectl apply -f ingress.yml

            echo "‚úÖ Verifying ingress..."
            kubectl -n ${K8S_NAMESPACE} get ingress bms-ingress -o wide || true
          '''
        }
      }
    }
  }

  post {
    success {
      emailext (
        subject: "‚úÖ SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
        body: "‚úÖ Project *${env.JOB_NAME}* build succeeded!<br>URL: ${env.BUILD_URL}",
        to: 'chakridevopsengineer@gmail.com'
      )
    }

    failure {
      emailext (
        subject: "‚ùå FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
        body: "‚ùå Project *${env.JOB_NAME}* failed!<br>Check logs:<br>${env.BUILD_URL}",
        to: 'chakridevopsengineer@gmail.com',
        attachLog: true
      )
    }
  }
}

