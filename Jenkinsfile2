pipeline {
    agent any
    tools {
        jdk 'jdk17'
        nodejs 'node23'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        AWS_REGION = 'ap-south-1'
        EKS_CLUSTER_NAME = 'new1'
        SONAR_HOST_URL = 'http://3.107.243.117:9090/'
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/ChakriAmajala/Book-My-Show.git'
                sh 'ls -la'
            }
        }

stage('SonarQube Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonarr', variable: 'SONAR_TOKEN')]) {
          sh '''
            echo "Using Sonar host: $SONAR_HOST_URL"
            /var/lib/jenkins/tools/hudson.plugins.sonar.SonarRunnerInstallation/sonar-scanner/bin/sonar-scanner \
              -Dsonar.projectKey=BMS \
              -Dsonar.projectName=BMS \
              -Dsonar.host.url="http://3.107.243.117:9090" \
              -Dsonar.login="$SONAR_TOKEN"
          '''
        }
      }
    }

        stage('Install Dependencies') {
            steps {
                sh '''
                cd bookmyshow-app
                ls -la
                if [ -f package.json ]; then
                    rm -rf node_modules package-lock.json
                    npm install
                else
                    echo "Error: package.json not found in bookmyshow-app!"
                    exit 1
                fi
                '''
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred', toolName: 'docker') {
                        sh '''
                        echo "Building Docker image..."
                        docker build --no-cache -t chakriamajaladocker/bookmyshow:latest -f bookmyshow-app/Dockerfile bookmyshow-app

                        echo "Pushing Docker image to Docker Hub..."
                        docker push chakriamajaladocker/bookmyshow:latest
                        '''
                    }
                }
            }
        }

stage('Deploy to EKS Cluster') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-creds']]) {
                    script {
                        sh '''
                        echo "âœ… Verifying AWS credentials..."
                        aws sts get-caller-identity

                        echo "ðŸ”§ Configuring kubectl for EKS cluster..."
                        aws eks update-kubeconfig --name $EKS_CLUSTER_NAME --region $AWS_REGION

                        echo "ðŸš€ Deploying application to EKS..."
                        kubectl apply -f deployment.yml
                        kubectl apply -f service.yml

                        echo "âœ… Verifying deployment..."
                        kubectl get pods
                        kubectl get svc
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            emailext attachLog: true,
                subject: "'${currentBuild.result}'",
                body: "Project: ${env.JOB_NAME}<br/>" +
                      "Build Number: ${env.BUILD_NUMBER}<br/>" +
                      "URL: ${env.BUILD_URL}<br/>",
                to: 'chakridevopsengineer@gmail.com',
                attachmentsPattern: 'trivyfs.txt,trivyimage.txt'
        }
    }
}
